{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "flutter clean",
            "problemMatcher": []
        },
        {
            "label": "l10n",
            "type": "shell",
            "command": "flutter gen-l10n",
            "problemMatcher": []
        },
        {
            "label": "runner",
            "type": "shell",
            "command": "dart run build_runner build --delete-conflicting-outputs",
            "problemMatcher": []
        },
        {
            "label": "icons",
            "type": "shell",
            "command": "dart run flutter_launcher_icons",
            "problemMatcher": []
        },
        {
            "label": "release_android",
            "type": "shell",
            "command": "flutter build appbundle --release",
            "problemMatcher": []
        },
        {
            "label": "release_android_apk",
            "type": "shell",
            "command": "flutter build apk --release",
            "problemMatcher": []
        },
        {
            "label": "release_ios",
            "type": "shell",
            "command": "flutter build ipa --release",
            "problemMatcher": []
        }
    ]
}
